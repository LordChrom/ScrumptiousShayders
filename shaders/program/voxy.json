    "uniforms": [
        "bedrockLevel",
        "frameCounter",
        "isEyeInWater",
        "moonPhase",
        "worldTime",

        "blindFactor", "darknessFactor", "nightVision",
        "cloudHeight",
        "far",
        "frameTimeCounter",
        "rainStrength",
        "screenBrightness",
        "shadowFade",
        "timeAngle", "timeBrightness",
        "viewWidth", "viewHeight",


