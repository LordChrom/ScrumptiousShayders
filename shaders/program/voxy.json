{
    "unusedString": "
        // voxy.json is run through the Iris preprocessor, so we can include settings.glsl to be 
        // to use shader settings this file.
        // However, since settings.glsl also contains GLSL code (not preprocessor directives), we 
        // can't include it directly into the JSON as it would cause syntax errors, so it is 
        // wrapped in a unused string field.
        #include "/lib/settings.glsl"

        #define VOXY_PATCH
    ",
    "version": 1,
    "excludeLodsFromVanillaDepth": false,
    "opaqueDrawBuffers": [
      0
      #ifdef MCBL_SS
        ,8
      #endif
    ],
    "translucentDrawBuffers": [
      0
      #ifdef MCBL_SS
        ,8
      #endif
    ],
    "blending": {
        -1: "off",
        0: "SRC_ALPHA ONE_MINUS_SRC_ALPHA ONE ONE_MINUS_SRC_ALPHA"
    },



#ifdef TAA
    "taaOffset": "{
    const vec2 mul = 1.0 / vec2(viewWidth, viewHeight);
    #if TAA_MODE == 0
    const vec2 jitterOffsets8[8] = vec2[8](
      vec2( 0.125,-0.375)*mul,
      vec2(-0.125, 0.375)*mul,
      vec2( 0.625, 0.125)*mul,
      vec2( 0.375,-0.625)*mul,
      vec2(-0.625, 0.625)*mul,
      vec2(-0.875,-0.125)*mul,
      vec2( 0.375,-0.875)*mul,
      vec2( 0.875, 0.875)*mul
    );
    return jitterOffsets8[int(framemod8)];
    #else
    const vec2 jitterOffsets2[2] = vec2[2](
      vec2( 1.0,  0.0)*mul,
      vec2( 0.0,  1.0)*mul
    );
    return jitterOffsets2[int(framemod2)];
    #endif
    return vec2(0.0);
    }",
#endif

    "uniforms": [
        "bedrockLevel",
        "frameCounter",
        "isEyeInWater",
        "moonPhase",
        "worldTime",

        "skyColor","fogColor",

        "blindFactor",
        "darknessFactor",
        "nightVision",
        "cloudHeight",
        "far",
        "frameTimeCounter",
        "rainStrength",
        "screenBrightness",
        "shadowFade",
        "timeAngle",
        "timeBrightness",
        "viewWidth",
        "viewHeight",


        "cameraPosition",
        "vxModelView", "vxModelViewInv","vxModelViewPrev",
        "vxProj", "vxProjInv", "vxViewProjPrev",
        "shadowProjection",
        "shadowModelView",

        #ifdef WEATHER_PERBIOME
        "isDesert",
        "isMesa",
        "isCold",
        "isSwamp",
        "isMushroom",
        "isSavanna",
        "isJungle",
        #endif

        #ifdef TAA
        #if TAA_MODE == 0
        "framemod8",
        #else
        "framemod2",
        #endif
        #endif

        #ifdef MCBL_SS
        "relativeEyePosition",
        "heldItemId",
        "heldItemId2",
        #endif

        "previousCameraPosition",
        "eyeBrightnessSmooth"

    ],
    "samplers": {
        #ifdef SHADOW
            "shadowtex0": "sampler2DShadow",
            #ifdef SHADOW_COLOR
                "shadowtex1": "sampler2DShadow",
                "shadowcolor0": "sampler2D",
            #endif
        #endif

	    #ifdef MCBL_SS
        "colortex8":"sampler2D",
        "colortex9":"sampler2D",
        #endif

        "vxDepthTexOpaque":"sampler2D",
        "vxDepthTexTrans":"sampler2D",
        #if CLOUDS == 2
        "gaux1":"sampler2D",
        #endif
        "gaux2":"sampler2D",
        "depthtex1":"sampler2D",
        "noisetex": "sampler2D"
    }
}