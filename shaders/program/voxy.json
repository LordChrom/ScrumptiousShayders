{
    "unusedString": "
        // voxy.json is run through the Iris preprocessor, so we can include settings.glsl to be 
        // to use shader settings this file.
        // However, since settings.glsl also contains GLSL code (not preprocessor directives), we 
        // can't include it directly into the JSON as it would cause syntax errors, so it is 
        // wrapped in a unused string field.
        #include "/lib/settings.glsl"
    ",
    "version": 1,
    "excludeLodsFromVanillaDepth": false,
    "opaqueDrawBuffers": [0],
    "translucentDrawBuffers": [0],
    "blending": {
        -1: "off",
   //     0: "ONE ONE_MINUS_SRC_ALPHA ONE ONE_MINUS_SRC_ALPHA"
       0: "SRC_ALPHA ONE_MINUS_SRC_ALPHA ONE ONE_MINUS_SRC_ALPHA"
    },
//#ifdef TAA
//    "taaOffset": "{
//    #ifdef TAAU
//        return taa_offset;
//    #else
//        return taa_offset * 0.66;
//    #endif
//    }",
//#endif

    "uniforms": [
        "bedrockLevel",
        "frameCounter",
        "isEyeInWater",
        "moonPhase",
        "worldTime",

        "skyColor","fogColor",

        "blindFactor",
        "darknessFactor",
        "nightVision",
        "cloudHeight",
        "far",
        "frameTimeCounter",
        "rainStrength",
        "screenBrightness",
        "shadowFade",
        "timeAngle",
        "timeBrightness",
        "viewWidth",
        "viewHeight",


        "cameraPosition",
        "vxModelView", "vxModelViewInv",
        "vxProj", "vxProjInv",
    //    "gbufferModelView",
    //    "gbufferModelViewInverse",
    //    "gbufferProjection",
    //    "gbufferProjectionInverse",
        "shadowProjection",
        "shadowModelView",

        #ifdef WEATHER_PERBIOME
        "isDesert",
        "isMesa",
        "isCold",
        "isSwamp",
        "isMushroom",
        "isSavanna",
        "isJungle",
        #endif

        "eyeBrightnessSmooth"

    ],
    "samplers": {
        #ifdef SHADOW
            "shadowtex0": "sampler2DShadow",
            #ifdef SHADOW_COLOR
                "shadowtex1": "sampler2DShadow",
                "shadowcolor0": "sampler2D",
            #endif
        #endif,

        "vxDepthTexOpaque":"sampler2D",
        "vxDepthTexTrans":"sampler2D",
        #if CLOUDS == 2
        "gaux1":"sampler2D",
        "gaux2":"sampler2D",
        #endif
        "depthtex1":"sampler2D",
        "noisetex": "sampler2D"
    }
}